---
import "./layout.scss";
import NavItem from "../components/NavItem.astro";
import Banner from "../components/Banner";

interface Props {
  title?: string;
}

const { title } = Astro.props;
const currentYear = new Date().getFullYear();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
      {title && `${title} | `}Kingswood Estates HOA
    </title>
  </head>

  <body>
    {/* Banners go here */}
    <Banner client:only showAfter="2025-07-01" hideAfter="2025-08-04">
      <i class="bi-calendar-check pe-1"></i>
      Our <b>Annual Meeting</b> is 10:00am Saturday 8/2 at the <a href="https://www.google.com/maps/place/North+Tahoe+Event+Center/data=!4m2!3m1!1s0x0:0xd91189bbc9f51660?sa=X&ved=1t:2428&ictx=111" target="_blank">North Tahoe Events
      Center</a> in Kings Beach. 
        <br />
        Call in or <a href="https://us05web.zoom.us/j/82689719598?pwd=sJqGAU4karR7uPDKL8syAZxLpFd3w0.1" target="_blank">join now via Zoom</a>. Phone: +1 (253) 205-0468, Meeting ID: 826 8971 9598, Pass: 449385
    </Banner>

    <div class="container-fluid">
      <header
        class="py-2 d-flex align-items-top justify-content-center flex-wrap flex-row"
      >
        <a href="/" class="d-flex text-dark text-decoration-none pe-4">
          {/* Logo */}
          <div class="d-flex flex-column">
            <span
              style="font-family: georgia pro, georgia, serif; font-size: 32px"
              >K<span style="position: relative; left: -1px; top: 5px;">E</span>
            </span><span
              style="font-variant: small-caps; font-family: georgia pro, georgia, serif; font-size: 14px; margin-top: -9px; letter-spacing: 3px; position: relative; left: 3px;"
              >HOA</span
            >
          </div>
        </a>
        <ul
          class="nav nav-pills flex-grow-1 flex-sm-grow-0 justify-content-center"
        >
          <NavItem label="Home" href="/" />
          <NavItem label="Documents" href="/documents" />
          <NavItem label="Events" href="/events" />
          <NavItem label="Local Links" href="/local-links" />
          <NavItem label="Board" href="/board" />
          <NavItem label="Contact" href="/contact" />
          <NavItem label="🪵 Fire Safety" href="/fire-safety" />
          <NavItem label="⚠️ Evacuation Plan" href="/evacuation" />
          <NavItem label="💳 Pay Dues" href="/pay" />
        </ul>
      </header>
      <div class="row">
        <div class="col px-0 position-relative">
          <div
            class="h-100 afsa"
            style="
            /* use padding to reserve minimum vertical space */
            padding-top: 27%;
          "
          >
            <div
              style="
                background-image: url('/img/splash2.jpg');
                position: absolute;
                width: 100%;
                min-height: 100%;
                top: 0;
                left: 0;
                background-size: cover;
                background-position: center bottom;
                overflow: hidden;
              "
            >
            </div>
          </div>
        </div>
      </div>
    </div>
    <slot />
    <div class="container-fluid">
      <footer class="pt-4 px-5 my-5 border-top text-muted">
        <div
          class="mx-auto d-flex flex-column flex-sm-row flex-wrap justify-content-between px-1"
          style="row-gap: 1em; column-gap: 3em;"
        >
          <div class="">
            <a
              class="link-secondary text-decoration-none"
              href="mailto:info@kingswoodtahoe.org"
            >
              <i class="bi-envelope-at"></i>
              info@kingswoodtahoe.org</a
            >
            <div>
              <a
                class="link-secondary text-decoration-none"
                href="tel:530-546-5913"
              >
                <i class="bi-telephone"></i>
                (530) 546-5913​</a
              >
            </div>
            <div class="">© 2014-{currentYear}</div>
          </div>
          <div class="d-flex">
            <i class="bi-envelope-paper pe-1"></i>
            <div translate="no">
              Kingswood Estates HOA<br />
              PO Box 1215<br />
              Kings Beach, CA 96143
            </div>
          </div>
          <div>
          <div>
              <a
                href="https://nextdoor.com/g/gtxtywqwz/"
                class="link-secondary text-decoration-none"
                target="_blank"
              >
                <i class="bi-chat-left-text"></i>
                Talk on Nextdoor
              </a>
            </div>
            <div>
              <a
                href="https://github.com/kingswoodtahoe/kingswoodtahoe.github.io"
                class="link-secondary text-decoration-none"
                target="_blank"
              >
                <i class="bi-github"></i>
                Contribute
              </a>
            </div>
          </div>
        </div>
        <a
          href="https://www.nfpa.org/Education-and-Research/Wildfire/Firewise-USA"
          class="d-block mx-auto pt-5 link-secondary text-decoration-none"
          style="width: 370.5px; height: 67.5px; box-sizing: content-box"
        >
          <img src="/img/firewise_logo.jpg" class="w-100 h-100" />
        </a>
      </footer>
    </div>

    <div class="text-center pt-3">
      <div>🌲🌲🌲</div>
    </div>
  </body>
</html>
